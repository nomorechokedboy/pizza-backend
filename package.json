{
  "name": "api-template",
  "version": "1.0.0",
  "description": "template for express restful api of myself",
  "main": "index.ts",
  "author": "Duong Le",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "watch": "nodemon --legacy-watch ./build",
    "dev": "concurrently \"tsc -w\" \"yarn watch\"",
    "pre-commit": "lint-staged",
    "prettier:fix": "prettier --write .",
    "prettier:check": "prettier --check .",
    "prerestart": "yarn build",
    "start": "nodemon ./build/index.js",
    "lint": "eslint --ignore-path .eslintignore --ext .ts ."
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "bcrypt": "^5.0.1",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint_d": "^11.1.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.1",
    "morgan": "^1.10.0",
    "validatorjs": "^3.22.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.12",
    "@types/validatorjs": "^3.15.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "typescript": "^4.5.3"
  },
  "lint-staged": {
    "*": "prettier --write"
  }
}
